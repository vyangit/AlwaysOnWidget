<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/toggle_awake_app_widget"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <ImageView
        android:id="@+id/toggle_awake_app_widget_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="@android:dimen/app_icon_size"
        android:minWidth="@android:dimen/app_icon_size"
        android:src="@drawable/app_widget_toggle_background" />

    <ImageButton
        android:id="@+id/toggle_awake_app_widget_button"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:contentDescription="@string/appwidget_toggle_button"
        android:src="@drawable/ic_always_on_toggle_off_24dp"
        android:scaleType="fitXY"
        android:padding="@dimen/spacing_narrow"
        android:layout_alignTop="@id/toggle_awake_app_widget_background"
        android:layout_alignBottom="@id/toggle_awake_app_widget_background"
        android:layout_alignStart="@id/toggle_awake_app_widget_background"
        android:layout_alignEnd="@id/toggle_awake_app_widget_background" />
</RelativeLayout>